{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@utils": ["src/utils"],
      "@queries": ["src/queries"],
      "@constants": ["src/constants"],
      "@styles/*": ["src/styles/*"],
      "@components/common": ["src/components/common"],
      "@components/custom": ["src/components/custom"],
      "@components/templates": ["src/components/templates"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/_error.js"],
  "exclude": ["node_modules"],
  "files": ["@types/block-content-to-react.d.ts"]
}
